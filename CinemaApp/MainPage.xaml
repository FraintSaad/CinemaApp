<Page
    x:Class="CinemaApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:data="using:CinemaApp.Models" xmlns:local="using:CinemaApp.Converters" xmlns:local1="using:CinemaApp.ViewModels"
    mc:Ignorable="d">

    <Page.DataContext>
        <local1:MainViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <local:VisibleConverter x:Key="VisibleConverter"/>
    </Page.Resources>
    <Page.TopAppBar>
        <CommandBar Background="Black" HorizontalAlignment="Left" DefaultLabelPosition="Right">
            <AppBarButton x:Name="SortByName" Icon="Sort" Label="По имени"  Foreground="White"
                          PointerEntered="CursorEntered_PointerEntered" PointerExited="CursorExited_PointerExited"
                          Command="{Binding DataContext.SortByNameCommand, ElementName=SortByName}" CommandParameter="{Binding}"/>
            <AppBarButton x:Name="SortByRating" Icon="Filter"  Label="По рейтингу"  Foreground="White"
                          PointerEntered="CursorEntered_PointerEntered" PointerExited="CursorExited_PointerExited"
                          Command="{Binding DataContext.SortByRatingCommand, ElementName=SortByRating}" CommandParameter="{Binding}"/>
            <AppBarButton x:Name="SortByYear" Icon="Calendar" Label="По дате выхода"  Foreground="White"
                          PointerEntered="CursorEntered_PointerEntered" PointerExited="CursorExited_PointerExited"
                          Command="{Binding DataContext.SortByYearCommand, ElementName=SortByYear}" CommandParameter="{Binding}"/>
        </CommandBar>
    </Page.TopAppBar>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Width="200" Background="#2D2D30" Padding="15">

            <Button x:Name="MainPageBtn" HorizontalAlignment="Stretch"  
                    PointerEntered="CursorEntered_PointerEntered" PointerExited="CursorExited_PointerExited"
                    Click="MainPageBtn_Click">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <SymbolIcon Symbol="Home" Foreground="White"/>
                    <TextBlock Text="Главная" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="FavoritesBtn" Margin="0,15,0,0" HorizontalAlignment="Stretch"  
                    PointerEntered="CursorEntered_PointerEntered" PointerExited="CursorExited_PointerExited"
                     Click="FavoritesBtn_Click">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <SymbolIcon Symbol="Favorite" Foreground="White"/>
                    <TextBlock Text="Избранное" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <ScrollViewer Background="#1E1E1E" Padding="1" Grid.Column="1" ViewChanged="ScrollViewer_ViewChanged">
            <ListView x:Name="MyListView" ItemsSource="{Binding Films, Mode=TwoWay}" Background="Transparent" 
                      SelectionMode="None" IsItemClickEnabled="True" HorizontalAlignment="Center"
                      ItemClick="MyListView_ItemClick">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="2" 
                                       HorizontalAlignment="Stretch" ItemWidth="500" ItemHeight="320"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="data:FilmModel">
                        <Grid Width="600"  PointerEntered="CursorEntered_PointerEntered" 
                              PointerExited="CursorExited_PointerExited" Height="300" Margin="10" Background="#252526" CornerRadius="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="{Binding PosterUrlPreview, Mode=TwoWay}" Grid.Column="0" Stretch="Fill" />

                            <Grid Grid.Column="1" Background="#333333" CornerRadius="0,8,8,0" Padding="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="{Binding NameRu, Mode=TwoWay}" Grid.Row="0" Foreground="White" 
                                           FontSize="18" FontWeight="SemiBold" TextWrapping="Wrap" MaxLines="2"
                                           LineHeight="24" LineStackingStrategy="BlockLineHeight"/>
                                <TextBlock Text="{Binding NameOriginal, Mode=TwoWay}" Grid.Row="1" Foreground="#A0A0A0" 
                                           FontSize="14" Margin="0,5,0,0" TextWrapping="Wrap" MaxLines="2"/>

                                <StackPanel Grid.Row="2" VerticalAlignment="Center" Margin="0,15,0,0">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE787;" Foreground="#A0A0A0" FontSize="12"/>
                                        <TextBlock Text="{Binding Year, Mode=TwoWay}" Foreground="#A0A0A0" FontSize="14"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                                        <FontIcon Glyph="&#xE734;" Foreground="Gold" FontSize="12"/>
                                        <TextBlock Text="{Binding RatingKinopoisk, Mode=TwoWay}" Foreground="Gold" FontSize="14"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                                        <FontIcon Glyph="&#xE12B;" Foreground="DodgerBlue" FontSize="12"/>
                                        <TextBlock Text="{Binding RatingImdb, Mode=TwoWay}" Foreground="DodgerBlue" FontSize="14"/>
                                    </StackPanel>
                                </StackPanel>

                                <Button x:Name="AddToFavoritesBtn" Grid.Row="3" 
                                        Visibility="{Binding IsInFavorites, Mode=TwoWay, Converter={StaticResource VisibleConverter}, ConverterParameter=add}"
                                        Command="{Binding DataContext.AddToFavoritesCommand,ElementName=MyListView}" CommandParameter="{Binding}">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <SymbolIcon Symbol="Favorite" Foreground="White"/>
                                        <TextBlock Text="Добавить в избранное" VerticalAlignment="Center" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="DeleteFromFavoritesBtn"  Grid.Row="3" 
                                        Visibility="{Binding IsInFavorites, Mode=TwoWay, Converter={StaticResource VisibleConverter}}"
                                        Command="{Binding DataContext.DeleteFromFavoritesCommand, ElementName=MyListView}" CommandParameter="{Binding}">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <SymbolIcon Symbol="Delete" Foreground="Red"/>
                                        <TextBlock Text="Удалить из избранного" VerticalAlignment="Center" Foreground="Red"/>
                                    </StackPanel>
                                </Button>

                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>

</Page>
